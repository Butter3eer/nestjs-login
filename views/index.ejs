<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Musics Database</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel='stylesheet' type='text/css' media='screen' href='style.css'>
</head>
<body>
  <p><%=message %></p>
    <h1>Online music streaming</h1>
  <table class="table" id="table">
    <% musics.forEach((all) => { %>
        <tr>
        <td class="td"><%= all.title %></td>
        <td class="td"><%= all.artist %></td>
        <td class="td"><%= all.length %></td>    
        </tr>
    <% }) %>
    </table>

    <% if (!ujZeneGomb) { %>
      <a href="/newMusic"><button class="btn btn-warning" id="newMusicButton" style="display: none;">Új zene</button></a>
      <a href="/login"><button class="btn btn-warning">Log in</button></a>
      <a href="/logout"><button class="btn btn-warning" style="display: none;">Log out</button></a>
      <a href="/registration"><button class="btn btn-warning">Regisztráció</button></a>
    <% } else { %>
      <a href="/newMusic"><button class="btn btn-warning" id="newMusicButton">Új zene</button></a>
      <a href="/login"><button class="btn btn-warning" style="display: none;">Log in</button></a>
      <a href="/logout"><button class="btn btn-warning">Log out</button></a>
      <a href="/registration"><button class="btn btn-warning" style="display: none;">Regisztráció</button></a>
    <% } %>

    
    
    
</body>
</html>
